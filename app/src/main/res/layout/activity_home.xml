<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_google_signin_btn_text_dark_default"
        tools:context="test.authtry1.HomeActivity"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"
            android:background="#4ED1FD"
            android:gravity="center_vertical"
            android:lineSpacingExtra="8sp"
            android:text="Home"
            android:textAlignment="center"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@+id/textView2"
            android:background="@drawable/canteen2"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/buttonProfile"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:text="Profile"
            android:background="#4ED1FD"
            android:layout_marginTop="20dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/buttonOrders"
            android:layout_below="@+id/buttonProfile"
            android:layout_centerHorizontal="true"
            android:text="Order History"
            android:background="#4ED1FD"
            android:layout_marginTop="20dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/buttonMenu"
            android:layout_below="@+id/buttonOrders"
            android:layout_centerHorizontal="true"
            android:text="Canteen Menu"
            android:background="#4ED1FD"
            android:layout_marginTop="20dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

    </RelativeLayout>

    <include
        layout="@layout/app_bar_hamburgermenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/activity_hamburgermenu_drawer" />

</android.support.v4.widget.DrawerLayout>
